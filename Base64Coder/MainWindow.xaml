<Window x:Class="Base64Coder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Base64Coder"
        mc:Ignorable="d"
        Title="Головна сторінка" Height="450" Width="800" Background="BlueViolet">
    <Grid>
        <StackPanel>
            <WrapPanel HorizontalAlignment="Center" Margin="0,30">
                <Border BorderBrush="Black" BorderThickness="1">
                    <Image x:Name="imgMain" Stretch="Fill" Width="200" Height="200"/>
                </Border>
            </WrapPanel>
            <TextBox HorizontalAlignment="Center" Name="txtCode"
                     Width="300"  Height="35" HorizontalScrollBarVisibility="Visible" IsReadOnly="True"/>
            <Button Click="btnLoadImage_Click" Width="200" Height="40" Margin="0,20" Content="Загрузити фото" FontSize="20"/>
            </StackPanel>
    </Grid>
</Window>
